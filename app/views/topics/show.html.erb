<h1><%=  @topic.title %></h1>
<div id="article_show">
  <% if @topic.attachment.file? %>
      <%= image_tag @topic.attachment.url, :class => "picture" %>
  <% end %>
  <%= simple_format(@topic.body) %><br />
    <span id="byline">By:<br />
  <%= @topic.name %>
</span>
</div>


<div id="post_it">
  <% if current_user %>
      <%= render 'posts/form' %>
      <h3>Comments</h3>
      <div id="comments"><%= render 'posts/post' %> </div>
  <% else %>
      <h3>Register To Comment</h3>
      <div id="comments">You Must Register<a onclick="show_register()" class="pointer"> HERE</a> to comment.<br /> It's free and easy so you should really do it!</div>

  <% end %>
</div>
