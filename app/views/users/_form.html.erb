<%= form_for users_path do |f| %>
    <div class="acc_font">

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name, :size => 18 %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password, :size => 18  %>
  </p>

  <p>
    <span onclick="hide_box()" class="hide_link" >Hide</span>
    <%= image_submit_tag("login.gif")%><br />

  </p>
        </div>
<% end %>
